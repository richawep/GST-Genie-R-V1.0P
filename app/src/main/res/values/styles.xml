<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWep" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TV_supplier_item_linkage">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="NavigationViewSize">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Button_Login">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/button_blue_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Proceed_Pay">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name ="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ET_Login_User_Name">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/user_name</item>
        <item name="android:digits">@string/nameValidation</item>
        <item name="android:drawableLeft">@mipmap/ic_user_name</item>
    </style>

    <style name="ET_Login_Password">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/password</item>
        <item name="android:digits">@string/nameValidation</item>
        <item name="android:drawableLeft">@mipmap/ic_password</item>
    </style>

    <style name="ET_Owner_Details">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="TV_Owner_Details">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="Button_Add">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">0dp</item>
        <!-- <item name="android:elevation">1dp</item> --> <!-- API level 21 is required -->
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_round_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ET_Customized">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="TV_Billing_Screen">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV_Billing_Screen_black">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Text_Hint_Size_Inc" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MY.DIALOG" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Custom_Dialog" parent="android:Theme.Holo.Light.Dialog" >
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TV_Title">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV_Billing_Item_List">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Custom_Dialog_Gray" parent="android:Theme.Holo.Light.Dialog" >
        <item name="android:windowBackground">@android:color/darker_gray</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BT_DISPLAY_Billing_Screen">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style   name="dialog" parent="@android:style/Theme.Dialog"> </style>
</resources>
